<main class="TodoPageMain">
    <h1 class="TodoPage-title">My Todo-list</h1>
    <%= form_with(url: "/todos", method: "POST", class: "AddToDo") do %>
      <%= text_field_tag(name='todo_text',
                         value=nil,
                         class: "AddTodo-text",
                         placeholder: "What's next?")
      %>
      <%= date_field_tag(name='due_date', value=nil, class: "AddTodo-date") %>
      <%= button_tag(value='Add', class: "AddTodo-button") %>
    <% end %>

    <%= render partial: "todo-section", locals: {
        section_title: "Overdue" ,
        todos: @todos.overdue ,
        show_due_date: true
    } %>
    <%= render partial: "todo-section", locals: {
        section_title: "Due Today" ,
        todos: @todos.due_today ,
        show_due_date: false
    } %>
    <%= render partial: "todo-section", locals: {
        section_title: "Due Later" ,
        todos: @todos.due_later ,
        show_due_date: true
    } %>

</main>
